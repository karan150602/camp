<!DOCTYPE html>
<html>
    <head>
        <title>
            YelpCamp
        </title>
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body> 
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">YelpCamp</a>
            </div>
            <div class="collapse navbar-collapse">
                    <form action="/campgrounds" method="GET" class="navbar-form navbar-right">
                        <div class="form-group">
                            <input type="text" name="search" placeholder="Campground Search..." class="form-control">
                            <input type="submit" value="Search" class="btn btn-default">
                        </div>
                    </form>
                <ul class="nav navbar-nav navbar-right">
                    <% if(!currentUser) {%>
                    <li><a href="/login">Login</a></li>
                    <li><a href="/register">Signup</a></li>
                    <% } else { %>
                    <li><a href="#">Signed in as <strong><%= currentUser.username %></strong></a></li>
                    <li><a href="/logout">Logout</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <% if(error && error.length>0) { %>
        <div class="alert alert-danger" role="alert"><%= error %></div>
        <% } %>
        <% if(success && success.length>0) { %>
        <div class="alert alert-success" role="alert"><%= success %></div>
        <% } %>
    </div>